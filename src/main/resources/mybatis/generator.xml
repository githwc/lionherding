<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- MySQL jar -->
    <classPathEntry
            location="D:\apache-maven-3.3.9\respository\mysql\mysql-connector-java\5.1.45\mysql-connector-java-5.1.45.jar"/>

    <context id="my" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="false"/>
            <property name="suppressAllComments" value="true"/>
            <!-- 关闭实体类注释 -->
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/lionherding?useUnicode=true&amp;characterEncoding=UTF-8&amp;zeroDateTimeBehavior=round"
                        userId="root" password="123456"/>

        <!-- java 实体类 -->
        <javaModelGenerator
                targetPackage="com.lh.system.model"
                targetProject="D:\idea_work\lionherding\src\main\java">
            <!-- 设置是否将生成的实体类放在targetPackage包中 -->
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- Mapper XML 文件-->
        <sqlMapGenerator
                targetPackage="mapper.system"
                targetProject="D:\idea_work\lionherding\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- Mapper接口的生成配置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.lh.system.mapper"
                             targetProject="D:\idea_work\lionherding\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="sys_user" domainObjectName="User"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
        </table>


    </context>
</generatorConfiguration>