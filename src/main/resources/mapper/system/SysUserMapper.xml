<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.system.mapper.SysUserMapper">

    <select id="departUserList" resultType="com.lh.system.entity.SysUser">
        select *
        from sys_user u
        <where>
            u.del_flag = 0
            and u.depart_id = #{params.deptId}
            <if test="params.loginName != null and params.loginName != '' ">
                and u.login_name like concat ('%',#{params.loginName},'%')
            </if>
        </where>
        order by u.sort
    </select>

</mapper>
