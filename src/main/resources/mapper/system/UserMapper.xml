<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.system.mapper.UserMapper" >

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lh.system.entity.User" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="nick_name" property="nickName" />
        <result column="login_name" property="loginName" />
        <result column="password" property="password" />
        <result column="age" property="age" />
        <result column="jobs" property="jobs" />
        <result column="sex" property="sex" />
        <result column="birthday" property="birthday" />
        <result column="picture" property="picture" />
        <result column="card_id" property="cardId" />
        <result column="mobile_phone" property="mobilePhone" />
        <result column="telephone" property="telephone" />
        <result column="short_tel" property="shortTel" />
        <result column="fax" property="fax" />
        <result column="address" property="address" />
        <result column="email" property="email" />
        <result column="ip_address" property="ipAddress" />
        <result column="reg_date" property="regDate" />
        <result column="login_count" property="loginCount" />
        <result column="to_day_login_count" property="toDayLoginCount" />
        <result column="create_id" property="createId" />
        <result column="create_name" property="createName" />
        <result column="create_date" property="createDate" />
        <result column="sort" property="sort" />
        <result column="state" property="state" />
        <result column="remark" property="remark" />
        <result column="depart_id" property="departId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        name, nick_name, login_name, password, age, jobs, sex, birthday, picture, card_id, mobile_phone, telephone, short_tel, fax, address, email, ip_address, reg_date, login_count, to_day_login_count, create_id, create_name, create_date, sort, state, remark, depart_id
    </sql>

    <!--自定义SQL-->
    <!--自定义条件查询-->
    <select id="findByField" resultType="com.lh.system.entity.User">
        select
        <include refid="Base_Column_List" />
        from sys_user
        <where>
            <if test="loginName !=null and loginName !=''">
                and login_name = #{loginName}
            </if>
        </where>
    </select>

    <select id="userList" resultType="com.lh.system.entity.User">
        select *
        from sys_user
    </select>

</mapper>
